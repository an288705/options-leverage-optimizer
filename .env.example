# Tradier API Configuration
# Copy this file to .env and fill in your API token

# Tradier API Token (get from https://developer.tradier.com)
VITE_TRADIER_API_TOKEN=your_api_token_here

# Tradier API Base URL
# Sandbox (free testing): https://sandbox.tradier.com
# Production (real data): https://api.tradier.com
VITE_TRADIER_API_BASE_URL=https://sandbox.tradier.com

# Enable/Disable Mock Mode
# Set to 'true' for mock data (no API token needed)
# Set to 'false' to use Tradier API
VITE_USE_MOCK_DATA=true

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=10000
